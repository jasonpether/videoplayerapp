<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpPage">

    <EditText
        android:id="@+id/ETSUpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Enter your password"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/Signupusername"
        app:layout_constraintTop_toBottomOf="@+id/Signupusername" />

    <EditText
        android:id="@+id/Signupusername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="182dp"
        android:ems="10"
        android:hint="Enter a Username"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ETSUconfirmpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:ems="10"
        android:hint="Confirm your password"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/ETSUpassword"
        app:layout_constraintTop_toBottomOf="@+id/ETSUpassword" />

    <Button
        android:id="@+id/CreateAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="31dp"
        android:text="Create Account"
        app:layout_constraintEnd_toEndOf="@+id/ETSUconfirmpassword"
        app:layout_constraintTop_toBottomOf="@+id/ETSUconfirmpassword" />


</androidx.constraintlayout.widget.ConstraintLayout>